
<input id="emailInput" name="emailInput" placeholder="Email..."
  class="form-control"
  [(ngModel)]="participant.email"
  [typeahead]="dataSource"
  (typeaheadLoading)="changeTypeaheadLoading($event)"
  (typeaheadNoResults)="changeTypeaheadNoResults($event)"
  (typeaheadOnSelect)="typeaheadOnSelect($event)"
  [typeaheadOptionsLimit]="10"
  [typeaheadMinLength]="3"
  [typeaheadOptionField]="'name'">

-------------------------



constructor(private calendarService: CalendarService) {

    this.dataSource = Observable.create((observer:any) => {

      this.calendarService.findUsers(this.participant.email)
        .then((response:any) => {

        if (!response.result) {
          observer.complete();
          return;
        }

        let users_result:Array<any> = [];
        for(let user of response.result.users) {
          users_result.push({
            'name': user.name.fullName,
            'email': user.primaryEmail
          });
        }
        observer.next(users_result);
        observer.complete();
      })
    });
}
